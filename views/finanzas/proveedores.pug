extends ../layout 

block contenido
    .content-wrapper
        .content-header
            .container-fluid
                .row.mb-2
                    .col-sm-6
                        h1.m-0 Proveedores
        section.content
          .container-fluid
          .card
            .card-header.border-0
              h3.card-title Products
              .card-tools
                a.btn.btn-tool.btn-sm(href="#")
                  i.fas.fa-download
                a.btn.btn-tool.btn-sm(href="#")
                  i.fas.fa-bars
            .card-body.table-responsive.p-0
              table.table.table-striped.table-valign-middle
                thead
                  tr
                    th Proveedor
                    th Rut
                    th Contacto
                    th Telefono
                    th.d-none.d-md-table-cell Proveedor
                    th.d-none.d-md-table-cell Rut
                    th.d-none.d-sm-table-cell Contacto
                tbody
                  tr
                    td
                      img.img-circle.img-size-32.mr-2(src="dist/img/default-150x150.png", alt="Product 1")
